{% extends 'MyAppleLiveBundle::layout.html.twig' %}

{% block style %}
	<link rel="stylesheet" type="text/css" href="{{ asset('layout.css') }}">
	<link rel="stylesheet" type="text/css" href="{{ asset('css/mod.css') }}">
	<link rel="stylesheet" type="text/css" href="{{ asset('css/progress.css') }}">
{% endblock %}

{% block body %}

			
	<script src="{{ asset('js/engine.js') }}" type="text/javascript"></script>
	<script src="{{ asset('js/ObjectToXML.js') }}" type="text/javascript"></script>
	<script src="{{ asset('js/jquery.js') }}" type="text/javascript"></script>
	<script src="{{ asset('js/mod.js') }}" type="text/javascript"></script>
	<script src="{{ asset('js/uploader.js') }}" type="text/javascript"></script>	
	<script src="{{ asset('js/progress.js') }}" type="text/javascript"></script>
	<script src="{{ asset('swfupload/swfupload.js') }}" type="text/javascript"></script>
	<script src="{{ asset('swfupload/handlers.js') }}" type="text/javascript"></script>	
	<!-- script src="{{ asset('swfupload/fileprogress.js') }}" type="text/javascript"></script -->
	<script src="{{ asset('swfupload/swfupload.queue.js') }}" type="text/javascript"></script>
	
	
	<div id="stack"></div>
	
	<div id="gotop" style="bottom: -80px;"><div onclick="engine.scroll.goTop();"><div id="arrowUp"><div></div><div></div><div></div><div></div><div></div><div id="new_counter"></div></div></div></div>
				
	
				
	<script type="text/javascript">
		engine.location = "{{ asset('/') }}";
	</script>
	
	
	<div id="dodaj">
		<div class="entry" id="entry10000">
				

			{% include 'MyAppleLiveBundle::navigation.html.twig' %}
			<div class="outline">
				<div class="time"><span class="clockeffect"><span>L</span></span><span>16:12:28</span></div>
				
				<div clas="content">
					
					<div id="swfupload_container"><span id="put_swfupload_here"></span></div>
					<div id="uploaded_photo"></div>
					
					<form action="{{ path('ajax_photo') }}" method="post" name="photo" {{ form_enctype(photo) }}>
					
						{{ form_widget(photo) }}
						
						<div>
							<input type="submit" name="login" value="opublikuj" class="anime"/>
						</div>
						
					</form>
					<form action="{{ path('ajax_entry') }}" method="post" name="entry" {{ form_enctype(entry) }}>
					
						{{ form_widget(entry) }}
						
						<div id="save">
							<input type="submit" name="login" value="opublikuj" class="anime"/>
						</div>
						
					</form>
				</div>
				
				<div class="topeffect"></div>
			</div>
			
			<div class="sign">{{ User.identity }} ({{User.login}}) | <span>Wypowiedź nr <span>329</span></span></div>
			
			<div class="bottomeffect1"></div>
			<div class="bottomeffect2"></div>
			<div class="bottomeffect3"></div>
		</div>
		
		<div id="uploadInProgres" style="display: none;">Wysyłanie <span></span>...</div>

	</div>
{% endblock %}
